<p id="notice"><%= notice %></p><h1>Employees</h1>
 <div class="container" >  
    <div class="row">  
  
     <div class="col-md-12">
          <%= link_to 'New Employee', new_employee_path, style:"color:#fff;", class:"btn btn-primary float-end" %>
          <br>
          <br>
          <br>
          <table class="table " style="box-shadow: 0px 0px 10px 0px black;">
            <thead class="table-dark h6">
              <tr>
                <th scope="col" >Email</th>
                <th scope="col" >Name</th>
                <th scope="col">Position</th>
                <th scope="col">Employee number</th>
                <th scope="col">Private number</th>
                <th scope="col" colspan="3"></th>
              </tr>
            <tbody>
              <% @employees.each do |employee| %>
                <tr>
                  <td scope="row"  ><%= employee.email %></td>
                  <td><%= employee.name %></td>
                  <td><%= employee.position %></td>
                  <td><%= employee.employee_number %></td>
                  <td><%= employee.private_number %></td>
                  <td scope="col" colspan="1"><%=  link_to 'Show', employee, class:"btn btn-info" , style:"color:#fff;" %></td>
                  <td scope="col" colspan="1"><%= link_to 'Edit', edit_employee_path(employee), class:"btn btn-warning", style:"color:#fff;" %></td>
                  <td scope="col" colspan="1" ><%= link_to 'X', employee, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger", style:"color:#fff;" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
     </div>
    </div>
 </div>


